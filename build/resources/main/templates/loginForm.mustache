{{>layout/header}}

<h1>로그인</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form method="post" action="/login">
            <div class="form-group">
                <label for="email">이메일</label>
                <input type="text" class="form-control" id="email" name="username" placeholder="이메일을 입력하세요."/>
            </div>
            <div class="form-group">
                <label for="password">비밀번호</label>
                <input type="password" class="form-control" id="password" name="password"/>
            </div>
            <button type="submit" class="btn btn-primary" id="btn-login">로그인</button>
            <button type="button" class="btn btn-primary" id="btn-join" onclick="location='/joinForm'">회원가입</button>
            <a href="/" role="button" class="btn btn-secondary">취 소</a>
        </form>
    </div>
</div>

{{>layout/footer}}